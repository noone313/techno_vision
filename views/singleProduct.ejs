    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      display: flex;
      align-items: center;
    }
    
    .logo-icon {
      width: 70px;
      height: 70px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-left: 10px;
    }
    
    .logo-icon img {
      max-width: 100%;
      height: auto;
      border-radius: 50%;
      transition: all 0.3s ease;
    }
    
    .logo-icon:hover img {
      transform: scale(1.05);
    }
    
    .logo-text {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
    
    .nav-links {
      display: flex;
      list-style: none;
      position: relative;
    }
    
    .nav-links li {
      margin: 0 15px;
      position: relative;
    }
    
    .nav-links a {
      text-decoration: none;
      color: var(--dark);
      font-weight: 500;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      padding: 5px 10px;
      border-radius: 20px;
    }
    
    .nav-links a:hover,
    .nav-links a.active {
      color: var(--primary);
      background: rgba(54, 201, 180, 0.1);
    }
    
    .nav-links .dropdown {
      position: relative;
    }
    
    .nav-links .dropdown-menu {
      display: none;
      position: absolute;
      top: 110%;
      right: 0;
      background: #fff;
      min-width: 180px;
      box-shadow: 0 8px 24px rgba(54,201,180,0.08);
      border-radius: 12px;
      z-index: 100;
      padding: 10px 0;
      border: 1px solid #e0f4f2;
      text-align: right;
    }
    
    .dropdown .dropdown-menu {
      display: none;
    }
    
    .dropdown.open .dropdown-menu {
      display: block;
    }
    
    .nav-links .dropdown-menu li {
      margin: 0;
    }
    
    .nav-links .dropdown-menu a {
      display: block;
      padding: 10px 24px;
      color: var(--dark);
      font-size: 1rem;
      border-radius: 0;
      background: none;
      transition: background 0.2s, color 0.2s;
    }
    
    .nav-links .dropdown-menu a:hover {
      background: rgba(54,201,180,0.08);
      color: var(--primary);
    }
    
    .nav-buttons {
      display: flex;
      align-items: center;
    }
    
    .search-box {
      position: relative;
      margin-left: 20px;
    }
    
    .search-box input {
      padding: 10px 15px;
      padding-right: 40px;
      border: 1px solid #ddd;
      border-radius: 30px;
      width: 250px;
      font-size: 1rem;
      transition: all 0.3s;
      background: #f8fafc;
    }
    
    .search-box input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(54, 201, 180, 0.2);
    }
    
    .search-box i {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
    }
    
    .mobile-toggle {
      display: none;
      font-size: 1.5rem;
      color: var(--dark);
      cursor: pointer;
    }
    
    /* محتوى الصفحة الرئيسية */
    main {
      margin-top: 100px;
      padding: 40px 0;
    }
    
    /* مسار التنقل */
    .breadcrumb {
      padding: 15px 0;
      margin-bottom: 30px;
      font-size: 0.9rem;
      color: #666;
    }
    
    .breadcrumb a {
      color: var(--primary);
      text-decoration: none;
      transition: all 0.2s;
    }
    
    .breadcrumb a:hover {
      text-decoration: underline;
    }
    
    .breadcrumb i {
