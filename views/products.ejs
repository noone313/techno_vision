      color: var(--primary);
      background: rgba(54, 201, 180, 0.1);
    }
    
    .nav-links .dropdown {
      position: relative;
    }
    
    .nav-links .dropdown-menu {
      display: none;
      position: absolute;
      top: 110%;
      right: 0;
      background: #fff;
      min-width: 180px;
      box-shadow: 0 8px 24px rgba(54,201,180,0.08);
      border-radius: 12px;
      z-index: 100;
      padding: 10px 0;
      border: 1px solid #e0f4f2;
      text-align: right;
    }
    
    .nav-links .dropdown:hover .dropdown-menu,
    .nav-links .dropdown:focus-within .dropdown-menu {
      display: block;
    }
    
    .nav-links .dropdown-menu li {
      margin: 0;
    }
    
    .nav-links .dropdown-menu a {
      display: block;
      padding: 10px 24px;
      color: var(--dark);
      font-size: 1rem;
      border-radius: 0;
      background: none;
      transition: background 0.2s, color 0.2s;
    }
    
    .nav-links .dropdown-menu a:hover {
      background: rgba(54,201,180,0.08);
      color: var(--primary);
    }
    
    .nav-buttons {
      display: flex;
      align-items: center;
    }
    
    .search-box {
      position: relative;
      margin-left: 20px;
    }
    
    .search-box input {
      padding: 10px 15px;
      padding-right: 40px;
      border: 1px solid #ddd;
      border-radius: 30px;
      width: 250px;
      font-size: 1rem;
      transition: all 0.3s;
      background: #f8fafc;
    }
    
    .search-box input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(54, 201, 180, 0.2);
    }
    
    .search-box i {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
