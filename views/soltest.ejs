document.addEventListener('DOMContentLoaded', function() {
  const dropdownToggle = document.querySelector('.nav-links .dropdown > a');
  const dropdownParent = document.querySelector('.nav-links .dropdown');
  
  // إنشاء زر الإغلاق ديناميكياً
  const closeButton = document.createElement('span');
  closeButton.className = 'close-dropdown';
  closeButton.innerHTML = '<i class="fas fa-times"></i>';
  document.querySelector('.dropdown-menu').prepend(closeButton);

  dropdownToggle.addEventListener('click', function(e) {
    e.preventDefault();
    dropdownParent.classList.toggle('open');
    document.body.style.overflow = dropdownParent.classList.contains('open') ? 'hidden' : '';
  });

  // إغلاق القائمة عند النقر على زر الإغلاق
  closeButton.addEventListener('click', function() {
    dropdownParent.classList.remove('open');
    document.body.style.overflow = '';
  });

  // إغلاق القائمة عند النقر خارجها
  document.addEventListener('click', function(e) {
    if (!dropdownParent.contains(e.target)) {
      dropdownParent.classList.remove('open');
      document.body.style.overflow = '';
    }
  });
});

document.addEventListener('DOMContentLoaded', function() {
  // حل مشكلة الارتجاف
  const submenuParents = document.querySelectorAll('.submenu-parent');
  
  submenuParents.forEach(parent => {
    // لحل مشكلة اختفاء القائمة
    parent.addEventListener('mouseenter', function() {
      this.querySelector('.submenu').style.display = 'block';
    });
    
    parent.addEventListener('mouseleave', function() {
      this.querySelector('.submenu').style.display = 'none';
    });
  });

  // للجوال
  if (window.innerWidth <= 768) {
    const submenuTriggers = document.querySelectorAll('.submenu-trigger');
    
    submenuTriggers.forEach(trigger => {
      trigger.addEventListener('click', function(e) {
        e.preventDefault();
        const parent = this.parentElement;
        parent.classList.toggle('active');
        
        // إغلاق القوائم الأخرى
        submenuParents.forEach(p => {
          if (p !== parent) {
            p.classList.remove('active');
          }
        });
      });
    });
  }
});

const toggleBtn = document.querySelector('.mobile-toggle');
  const navLinks = document.querySelector('.nav-links');

  toggleBtn.addEventListener('click', () => {
    navLinks.classList.toggle('show-mobile-menu');
