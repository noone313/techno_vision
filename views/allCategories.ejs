    :root {
      --primary: #36c9b4;
      --primary-light: #5bd5c3;
      --primary-dark: #2aa897;
      --accent: #ff6b6b;
      --dark: #1a3c38;
      --light: #f8fafc;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Tajawal', sans-serif;
      background: linear-gradient(135deg, #ffffff, #f0f9f8);
      color: #333;
      line-height: 1.6;
      direction: rtl;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* شريط التنقل */
    header {
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
      position: fixed;
      width: 100%;
      top: 0;
      z-index: 1000;
      padding: 15px 0;
    }
    
    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      display: flex;
      align-items: center;
    }
    
    .logo-icon {
      width: 70px;
      height: 70px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-left: 10px;
    }
    
    .logo-icon img {
      max-width: 100%;
      height: auto;
      border-radius: 50%;
      transition: all 0.3s ease;
    }
    
    .logo-icon:hover img {
      transform: scale(1.05);
    }
    
    .logo-text {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
    
    .nav-links {
      display: flex;
      list-style: none;
    }
    
    .nav-links li {
      margin: 0 15px;
    }
    
    .nav-links a {
      text-decoration: none;
      color: var(--dark);
      font-weight: 500;
      font-size: 1.1rem;
      transition: all 0.3s ease;
      padding: 5px 10px;
      border-radius: 20px;
    }
    
    .nav-links a:hover,
    .nav-links a.active {
      color: var(--primary);
      background: rgba(54, 201, 180, 0.1);
    }
    
    .nav-buttons {
      display: flex;
      align-items: center;
    }
    
    .search-box {
      position: relative;
      margin-left: 20px;
    }
    
    .search-box input {
      padding: 10px 15px;
      padding-right: 40px;
      border: 1px solid #ddd;
      border-radius: 30px;
      width: 250px;
      font-size: 1rem;
      transition: all 0.3s;
      background: #f8fafc;
    }
    
    .search-box input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(54, 201, 180, 0.2);
    }
    
    .search-box i {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
    }
    
    .mobile-toggle {
      display: none;
      font-size: 1.5rem;
      color: var(--dark);
      cursor: pointer;
    }
    
    /* قسم البطل للفئات */
    .categories-hero {
      background: linear-gradient(135deg, rgba(54, 201, 180, 0.2), rgba(255, 255, 255, 0.8));
      text-align: center;
      padding: 150px 0 80px;
      margin-top: 70px;
    }
    
    .categories-hero h1 {
      font-size: 2.5rem;
      color: var(--dark);
      margin-bottom: 15px;
    }
    
    .categories-hero p {
      font-size: 1.2rem;
      color: #555;
      max-width: 700px;
      margin: 0 auto;
    }
    
    /* قسم عرض الفئات */
    .all-categories {
      padding: 60px 0;
    }
    
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 30px;
      margin-top: 40px;
    }
    
    .category-card {
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      transition: all 0.4s ease;
      border: 1px solid rgba(54, 201, 180, 0.1);
      text-decoration: none;
      color: var(--dark);
    }
    
    .category-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(54, 201, 180, 0.15);
    }
    
    .category-image {
      height: 200px;
      overflow: hidden;
      position: relative;
    }
    
    .category-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    
    .category-card:hover .category-image img {
      transform: scale(1.1);
    }
    
    .category-content {
      padding: 20px;
      text-align: center;
    }
    
    .category-content h3 {
      font-size: 1.4rem;
      margin-bottom: 10px;
      color: var(--dark);
    }
    
    .product-count {
      display: inline-block;
      background: rgba(54, 201, 180, 0.1);
      color: var(--primary);
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.9rem;
      font-weight: 600;
    }
    
    /* التذييل */
    footer {
      background: var(--dark);
      color: white;
      padding: 70px 0 30px;
    }
    
    .footer-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
      margin-bottom: 50px;
    }
    
    .footer-col h3 {
      font-size: 1.4rem;
      margin-bottom: 25px;
      position: relative;
      padding-bottom: 10px;
    }
    
    .footer-col h3::after {
      content: '';
      position: absolute;
      width: 50px;
      height: 3px;
      background: var(--primary);
      bottom: 0;
      right: 0;
      border-radius: 2px;
    }
    
    .footer-links {
      list-style: none;
    }
    
    .footer-links li {
      margin-bottom: 12px;
    }
    
    .footer-links a {
      color: #bbb;
      text-decoration: none;
      transition: all 0.3s ease;
      display: block;
    }
    
    .footer-links a:hover {
      color: var(--primary);
      transform: translateX(5px);
    }
    
    .contact-info {
      list-style: none;
    }
    
    .contact-info li {
      display: flex;
      margin-bottom: 20px;
    }
    
    .contact-info i {
      color: var(--primary);
      font-size: 1.2rem;
      margin-left: 15px;
      margin-top: 5px;
    }
    
    .social-links {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }
    
    .social-link {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
