        </td>
        <td>
          <ul class="features-list">
            <% if (solution.features) { 
              let featuresArray = [];
              try {
                featuresArray = JSON.parse(solution.features);
              } catch (e) {
                featuresArray = [];
              }
            %>
              <% featuresArray.forEach(feature => { %>
                <li><%= feature.emoji %> <strong><%= feature.title %></strong> <%= feature.description %></li>
              <% }) %>
            <% } %>
          </ul>
        </td>
        <td><%= solution.description %></td>
        <td>
          <button class="btn btn-sm btn-outline" onclick="confirmDelete('<%= solution.id %>', 'system')">
            <i class="fas fa-trash"></i> حذف
          </button>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

          </div>
        </div>
      </div>
    </main>
